<!-- Include Header -->
  <%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">

    <form class="" action="" method="GET">
      <div class="form-group">
        <label for="availability" class="text-light">Show me options free of: </label>
        <div class="inline">
          <input type="text" name="hypersensitivity" value=""
          />
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn text-dark update border-shadow">Filter</button>
      </div>
    </form>

    <!-- Menu Body -->
    <div class="container">
      <table class="table">
        <thead>
          <h2 class="menu-category">Appetizers</h2>
        </thead>
        <tbody>
          <%- include('include/_menuappetizers') %>
        </tbody>
      </table>

      <table class="table">
        <thead>
          <h2 class="menu-category">Entrees</h2>
        </thead>
        <tbody>
          <%- include('include/_menuentrees') %>
        </tbody>
      </table>

      <table class="table">
        <thead>
          <h2 class="menu-category">Salads</h2>
        </thead>
        <tbody>
          <%- include('include/_menusalads') %>
        </tbody>
      </table>

      <table class="table">
        <thead>
          <h2 class="menu-category">Desserts</h2>
        </thead>
        <tbody>
          <%- include('include/_menudesserts') %>
        </tbody>
      </table>
    </div>

    <div class="box-nav d-flex justify-between">
      <a href="/" class="border-shadow">
        <span class="text-gradient"
          >Admin Access  <i class="fa-brands fa-vaadin"></i>
        </span>
      </a>
    </div>
  </div>
</main>
<!-- /Main Site -->

<!-- Include Footer -->
  <%- include('include/_footer') %>
