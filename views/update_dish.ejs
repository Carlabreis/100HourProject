<!-- Include Header -->
  <%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/" class="border-shadow">
        <span class="text-gradient"
          ><i class="fas fa-angle-double-left"></i> All Dishes
        </span>
      </a>
    </div>
    <div class="text-center">
      <h2 class="text-dark">Update Dish</h2>
      <span class="text-light"
        >Use the bellow form to update the dish on the menu</span
      >
    </div>

    <!-- Form Handling -->
    <form id="update_dish" method="POST">
      <div class="new_dish">
        <div class="form-group">
          <label for="dish" class="text-light">Dish</label>
          <input type="hidden" name="id" value="<%= dish._id %>" />
          <input
            type="text"
            name="dish"
            value="<%= dish.dish %>"
            placeholder="e.g. Chicken Parm"
          />
        </div>

        <div class="form-group">
          <label for="category" class="text-light">Category</label>
          <div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-appetizer"
                name="category"
                value="Appetizer"
                <%= dish.category === 'Appetizer' ? 'checked' : '' %>
              />
              <label for="radio-appetizer" class="radio-label">Appetizer</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-entree"
                name="category"
                value="Entree"
                <%= dish.category === 'Entree' ? 'checked' : '' %>
              />
              <label for="radio-entree" class="radio-label">Entree</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-salad"
                name="category"
                value="Salad"
                <%= dish.category === 'Salad' ? 'checked' : '' %>
              />
              <label for="radio-salad" class="radio-label">Salad</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-dessert"
                name="category"
                value="Dessert"
                <%= dish.category === 'Dessert' ? 'checked' : '' %>
              />
              <label for="radio-dessert" class="radio-label">Dessert</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-soup"
                name="category"
                value="Soup"
                <%= dish.category === 'Soup' ? 'checked' : '' %>
              />
              <label for="radio-soup" class="radio-label">Soup</label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="text-light">Description</label>
          <input type="text" name="description" value="<%= dish.description %>" placeholder="" />
        </div>

        <div class="form-group">
          <label for="ingredients" class="text-light">Ingredients</label>
          <input type="text" name="ingredients" value="<%= dish.ingredients %>" placeholder="" />
        </div>

        <div class="form-group">
          <label for="diet" class="text-light">Diet</label>
          <div class="">
            <div class="radio inline">
              <input
                type="radio"
                id="radio-vegan"
                name="diet"
                value="Vegan"
                <%= dish.diet === 'Vegan' ? 'checked' : '' %>
              />
              <label for="radio-vegan" class="radio-label">Vegan</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-vegetarian"
                name="diet"
                value="Vegetarian"
                <%= dish.diet === 'Vegetarian' ? 'checked' : '' %>
              />
              <label for="radio-vegetarian" class="radio-label">Vegetarian</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-regular"
                name="diet"
                value="Regular"
                <%= dish.diet === 'Regular' ? 'checked' : '' %>
              />
              <label for="radio-regular" class="radio-label">Regular</label>
            </div>
          </div>      
        </div>

        <div class="form-group">
          <label for="allergens" class="text-light">Allergens</label>
          <div class="">
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-dairy"
                name="allergens"
                value="Dairy"
                <%= dish.allergens.includes('Dairy') ? 'checked' : '' %>
              />
              <label for="radio-dairy" class="radio-label">Dairy</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-eggs"
                name="allergens"
                value="Eggs"
                <%= dish.allergens.includes('Eggs') ? 'checked' : '' %>
              />
              <label for="radio-eggs" class="radio-label">Eggs</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-fish"
                name="allergens"
                value="Fish"
                <%= dish.allergens.includes('Fish') ? 'checked' : '' %>
              />
              <label for="radio-fish" class="radio-label">Fish</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-shellfish"
                name="allergens"
                value="Shellfish"
                <%= dish.allergens.includes('Shellfish') ? 'checked' : '' %>
              />
              <label for="radio-shellfish" class="radio-label">Shellfish</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-treenuts"
                name="allergens"
                value="Tree-Nuts"
                <%= dish.allergens.includes('Tree-Nuts') ? 'checked' : '' %>
              />
              <label for="radio-treenuts" class="radio-label">Tree Nuts</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-peanuts"
                name="allergens"
                value="Peanuts"
                <%= dish.allergens.includes('Peanuts') ? 'checked' : '' %>
              />
              <label for="radio-peanuts" class="radio-label">Peanuts</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-wheat"
                name="allergens"
                value="Wheat"
                <%= dish.allergens.includes('Wheat') ? 'checked' : '' %>
              />
              <label for="radio-wheat" class="radio-label">Wheat</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-soy"
                name="allergens"
                value="Soy"
                <%= dish.allergens.includes('Soy') ? 'checked' : '' %>
              />
              <label for="radio-soy" class="radio-label">Soy</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-gluten"
                name="allergens"
                value="Gluten"
                <%= dish.allergens.includes('Gluten') ? 'checked' : '' %>
              />
              <label for="radio-gluten" class="radio-label">Gluten</label>
            </div>
            <div class="radio inline">
              <input
                type="checkbox"
                id="radio-sesame"
                name="allergens"
                value="Sesame"
                <%= dish.allergens.includes('Sesame') ? 'checked' : '' %>
              />
              <label for="radio-sesame" class="radio-label">Sesame</label>
            </div>
          </div>      
        </div>

        <div class="form-group">
          <label for="price" class="text-light">Price</label>
          <input type="text" name="price" value="<%= dish.price %>" placeholder="$0.00" />
        </div>

        <div class="form-group">
          <label for="availability" class="text-light">Availability</label>
          <div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-2"
                name="availability"
                value="Available"
                <%= dish.availability === 'Available' ? 'checked' : '' %>
              />
              <label for="radio-2" class="radio-label">Available</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-3"
                name="availability"
                value="Unavailable"
                <%= dish.availability === 'Unavailable' ? 'checked' : '' %>
              />
              <label for="radio-3" class="radio-label">Unavailable</label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>

  </div>
</main>
<!-- /Main Site -->

<!-- Include Footer -->
  <%- include('include/_footer') %>
<!-- /Include Footer -->
