<!-- Include Header -->
  <%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/" class="border-shadow">
        <span class="text-gradient"
          ><i class="fas fa-angle-double-left"></i> All Dishes
        </span>
      </a>
    </div>
    <div class="text-center">
      <h2 class="text-dark">Update Dish</h2>
      <span class="text-light"
        >Use the bellow form to update the dish on the menu</span
      >
    </div>

    <!-- Form Handling -->
    <form id="update_dish" method="POST">
      <div class="new_dish">
        <div class="form-group">
          <label for="dish" class="text-light">Dish</label>
          <input type="hidden" name="id" value="<%= dish._id %>" />
          <input
            type="text"
            name="dish"
            value="<%= dish.dish %>"
            placeholder="e.g. Chicken Parm"
          />
        </div>

        <div class="form-group">
          <label for="category" class="text-light">Category</label>
          <div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-4"
                name="category"
                value="Appetizer"
                <%= dish.category === 'Appetizer' ? 'checked' : '' %>
              />
              <label for="radio-4" class="radio-label">Appetizer</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-5"
                name="category"
                value="Entree"
                <%= dish.category === 'Entree' ? 'checked' : '' %>
              />
              <label for="radio-5" class="radio-label">Entree</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-6"
                name="category"
                value="Salad"
                <%= dish.category === 'Salad' ? 'checked' : '' %>
              />
              <label for="radio-6" class="radio-label">Salad</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-7"
                name="category"
                value="Dessert"
                <%= dish.category === 'Dessert' ? 'checked' : '' %>
              />
              <label for="radio-7" class="radio-label">Dessert</label>
            </div>
            <div class="radio inline">
              <input type="radio" id="radio-8" name="category" value="Soup" <%= dish.category === 'Soup' ? 'checked' : '' %> />
              <label for="radio-8" class="radio-label">Soup</label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="text-light">Description</label>
          <input type="text" name="description" value="<%= dish.description %>" placeholder="" />
        </div>

        <div class="form-group">
          <label for="ingredients" class="text-light">Ingredients</label>
          <input type="text" name="ingredients" value="<%= dish.ingredients %>" placeholder="" />
        </div>

        <div class="form-group">
          <label for="diet" class="text-light">Diet</label>
          <div class="">
            <div class="radio inline">
              <input
                type="radio"
                id="radio-9"
                name="diet"
                value="Vegan"
                <%= dish.diet === 'Vegan' ? 'checked' : '' %>
              />
              <label for="radio-9" class="radio-label">Vegan</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-10"
                name="diet"
                value="Vegetarian"
                <%= dish.diet === 'Vegetarian' ? 'checked' : '' %>
              />
              <label for="radio-10" class="radio-label">Vegetarian</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-11"
                name="diet"
                value="Regular"
                <%= dish.diet === 'Regular' ? 'checked' : '' %>
              />
              <label for="radio-11" class="radio-label">Regular</label>
            </div>
          </div>      
        </div>

        <div class="form-group">
          <label for="price" class="text-light">Price</label>
          <input type="text" name="price" value="<%= dish.price %>" placeholder="$0.00" />
        </div>

        <div class="form-group">
          <label for="availability" class="text-light">Availability</label>
          <div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-2"
                name="availability"
                value="Available"
                <%= dish.availability === 'Available' ? 'checked' : '' %>
              />
              <label for="radio-2" class="radio-label">Available</label>
            </div>
            <div class="radio inline">
              <input
                type="radio"
                id="radio-3"
                name="availability"
                value="Unavailable"
                <%= dish.availability === 'Unavailable' ? 'checked' : '' %>
              />
              <label for="radio-3" class="radio-label">Unavailable</label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>

  </div>
</main>
<!-- /Main Site -->

<!-- Include Footer -->
  <%- include('include/_footer') %>
<!-- /Include Footer -->
